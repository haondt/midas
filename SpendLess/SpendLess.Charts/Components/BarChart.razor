@namespace SpendLess.Charts.Components



<div>
  <canvas
      _="
        on load
            js(me)
                return new Chart(me, {
                    type: 'bar',
                    data: {
                        labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
                        datasets: [{
                            label: '# of Votes',
                            data: [12, 19, 3, 5, 2, 3],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            end
            set :chart to it
        end
        
        on htmx:beforeCleanupElement
            set chart to :chart
            js(chart)
                chart.destroy();
            end
        end
        "></canvas>
</div>