@using SpendLess.Domain.Models

@code {
    [Parameter, EditorRequired]
    public required List<(string Message, int Count)> Warnings { get; set; }
    [Parameter, EditorRequired]
    public required List<(string Message, int Count)> Errors { get; set; }
    [Parameter]
    public List<string> NewAccounts { get; set; } = [];
    [Parameter, EditorRequired]
    public required string JobId { get; set; } 
}
<div class="box">
    <div class="is-flex is-flex-direction-row is-align-items-center is-justify-content-space-between">
        <p class="title is-4">Dry Run Summary</p>
        <button 
            class="button is-info"
            hx-get="transaction-import/dry-run/@JobId/transactions"
            hx-swap="none">
            Review Transactions
        </button>
    </div>
    <p class="subtitle">Incoming changes</p>

    <div class="message">
        <div class="message-body">
            <table class="table is-hoverable  is-fullwidth" >
                <thead>
                    <tr>
                        <th>Updated Account Balances</th>
                        <th>Balance</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            oooooo
                        </td>
                        <td>$1</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="message">
        <div class="message-body">
            <table class="table is-hoverable  is-fullwidth" >
                <thead>
                    <tr>
                        <th>New Categories</th>
                        <th>Transactions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            foo
                        </td>
                        <td>$1</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

        
    <div class="message">
        <div class="message-body">
            <table class="table is-hoverable  is-fullwidth" >
                <thead>
                    <tr>
                        <th>New Tags</th>
                        <th>Transactions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            foo
                        </td>
                        <td>$1</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    @if (NewAccounts.Count > 0)
    {
        <div class="message">
            <div class="message-body">
                <table class="table is-hoverable  is-fullwidth" >
                    <thead>
                        <tr>
                            <th>New Accounts</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var name in NewAccounts)
                        {
                            <tr><td>@name</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @if (Warnings.Count > 0)
    {
        <p class="subtitle">Warnings</p>
        <div class="message is-warning">
            <div class="message-body">
                <table class="table is-hoverable  is-fullwidth" >
                    <thead>
                        <tr>
                            <th>Warning</th>
                            <th>Affected Transactions</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var (message, count) in Warnings)
                        {
                            <tr class="is-warning">
                                <td>
                                    @message
                                </td>
                                <td>@count</td>
                                <td>

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @if(Errors.Count > 0)
    {
        <p class="subtitle">Errors</p>
        <div class="message is-danger">
            <div class="message-body">
                <table class="table is-hoverable  is-fullwidth" >
                    <thead>
                        <tr>
                            <th>Error</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var (message, sourcePayload) in Errors)
                        {
                            <tr class="is-danger">
                                <td>
                                    @message
                                </td>
                                <td><button 
                                    class="button"
                                    _="
                                        on click
                                            writeText('@sourcePayload') into the navigator's clipboard
                                            set target to the first .copy-button-text in me
                                            set the target's innerHTML to 'Copied!'
                                                then wait 1.3s
                                                then set the target's innerHTML to 'Copy Request'
                                    ">
                                    <span class="icon is-small">
                                        <i class="fas fa-copy"></i>
                                    </span>
                                    <span class="copy-button-text">Copy Request</span>
                                </button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
