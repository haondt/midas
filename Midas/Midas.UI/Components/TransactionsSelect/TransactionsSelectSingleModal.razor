@using Haondt.Core.Models
@using Midas.UI.Components.Transactions
@using Midas.UI.Models.Transactions
@using Midas.UI.Models.TransactionsSelect
@using Midas.UI.Shared.Components

@code {
    private TransactionSearchOptions _options = new()
    {
        HideActions = true,
        HideCheckboxes = true,
        LinkTarget = TransactionLinkTarget.Custom,
        LinkCustomTarget = "/transactions-select/single-select"
    };
}


<Modal Title="Select Transaction">
    <BodyContent>
        <TransactionsSearch Options="@_options" />
    </BodyContent>

    <FooterContent>
        <button class="button" 
            _="on click send click to the previous .modal-background">
            Cancel
        </button>
    </FooterContent>
</Modal>
