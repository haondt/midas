@using Haondt.Core.Models
@using Midas.Core.Constants
@using Midas.UI.Shared.Components

@code {
    [Parameter]
    public string Id { get; set; } = MidasConstants.DefaultAccount;
    [Parameter]
    public Optional<string> InputName { get; set; }
    [Parameter]
    public bool IsExistingAccount { get; set; } = false;

    private Dictionary<string, object> InputAttributes = new();
    protected override void OnInitialized()
    {
        if (InputName.HasValue)
            InputAttributes["name"] = InputName.Value;
    }
}

<Tag IsStatic="true" Text="@Id" IsMonospace="true" ColorClasses="@(IsExistingAccount ? "has-text-success" : "")" />
<input type="hidden" value="@Id" @attributes="InputAttributes"/>
