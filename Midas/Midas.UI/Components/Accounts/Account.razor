@using Midas.Core.Models
@code {
    [Parameter, EditorRequired]
    public required string Id { get; set; }
    [Parameter, EditorRequired]
    public required string Name { get; set; }
    [Parameter, EditorRequired]
    public required decimal Balance { get; set; }
    [Parameter, EditorRequired]
    public required bool IsIncludedInNetWorth { get; set; }
}
<div class="panel is-link" style="max-width:var(--midas-form-page-width);margin:auto;">
    <p class="panel-heading">Account</p>
    <div class="panel-block">
        <div class="control">
            <form hx-swap="none" class="column" hx-post="/account/@Id" style="max-width:var(--midas-max-width);">
                <div class="control">
                    <div class="field">
                        <label class="label">Name</label>
                        <input name="name" class="input" type="text" value="@Name" />
                    </div>
                    <div class="field">
                        <label class="label">Balance</label>
                        <input class="input" type="text" value="@StringFormatter.FormatCurrency(Balance)" readonly />
                    </div>
                    <div class="field">
                        <div class="control">
                            <label class="checkbox">
                                @if (IsIncludedInNetWorth)
                                {
                                    <input type="checkbox" name="include-in-net-worth" checked>
                                }
                                else
                                {
                                    <input type="checkbox" name="include-in-net-worth">
                                }
                                Include in Net Worth
                            </label>
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <button class="button is-link">Save Changes</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
